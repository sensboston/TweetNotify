<Window x:Class="TweetNotify.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="About"
        Width="400"
        Height="300"
        Icon="/App.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image Margin="10" Source="App.ico" Width="64" Height="64" VerticalAlignment="Top"/>

            <Grid Grid.Column="1" Margin="0 -4 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" x:Name="AppNameTextBlock" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" />
                <TextBlock Grid.Row="1" x:Name="AssemblyDescriptionTextBlock" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" x:Name="AppVersionTextBlock" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" x:Name="AssemblyCopyrightTextBlock" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Hyperlink x:Name="GithubHyperlink" RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://github.com/sensboston/TweetNotify">
                        https://github.com/sensboston/TweetNotify
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Setup Instruction Line 1" TextWrapping="Wrap" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="1" Text="Setup Instruction Line 2" TextWrapping="Wrap" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="2" Text="Setup Instruction Line 3" TextWrapping="Wrap" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="3">
                <Hyperlink x:Name="WebsiteHyperlink" RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/sensboston/TweetNotify
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
